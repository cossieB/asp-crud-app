@model Developer
@{
    ViewData["Title"] = "Details";
}
<div class="container mt-5">
<img class="img-fluid" src="@Model.Logo" style="max-height:200px"/>
<h1 class="mt-3">@Model.Name</h1>
<p>@Model.Summary</p>
<table class="table table-bordered text-light">
    <thead>
        <tr class="text-info">
            <th>Key</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Location</td>
            <td>@Model.Location</td>
        </tr>
        <tr>
            <td>Country</td>
            <td>@Model.Country</td>
        </tr>

    </tbody>
</table>
<div>
	<h2>Games</h2>
</div>
<div class="row">
	@foreach (var item in Model.Games)
	{
		<div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
			<div class="card bg-light h-100">
				<img class="card-img-top h-100" src="@item.CoverImg" />
				<div class="card-body">
					<p class="card-title">@item.Title</p>
					<div class="w-100 btn-group">
						<a asp-controller="Games" asp-action="Details" asp-route-Id="@item.GameId" class="btn btn-info w-25 d-flex align-items-center justify-content-center" title="Details">
							<i class="bi bi-info-square"></i>
							<span class="d-sm-inline-block">&nbsp; Details</span>
						</a>

					</div>
				</div>
			</div>
		</div>

	}
</div>