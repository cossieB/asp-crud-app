<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - IGDB</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/IGDB.styles.css" asp-append-version="true" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" style="font-family: 'Press Start 2p', cursive" asp-area="" asp-controller="Home" asp-action="Index">IGDB</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor02">
					<ul class="navbar-nav me-auto">
												<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Games" asp-action="Index">Games</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Publisher" asp-action="Index">Publishers</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Developer" asp-action="Index">Developers</a>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Quick Links</a>
							<div class="dropdown-menu">
								<a class="dropdown-item" asp-controller="Games" asp-action="Create">Add Game</a>
								<a class="dropdown-item" asp-controller="Developer" asp-action="Create">Add Developer</a>
								<a class="dropdown-item" asp-controller="Publisher" asp-action="Create" >Add Publisher</a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="https://cossie-91.web.app" target="_blank" rel="noreferrer">Portfolio</a>
							</div>
						</li>
					</ul>
					<form class="d-flex" asp-controller="Home" asp-action="Search" method="post">
						<input class="form-control me-sm-2" type="text" placeholder="Search" name="searchTerm">
						<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
					</form>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - <a href="https://cossie-91.web.app" target="_blank" rel="noreferrer">Cossie</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
