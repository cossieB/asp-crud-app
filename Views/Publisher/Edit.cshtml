@model Publisher
@using IGDB.Utils
@{
	ViewData["Title"] = "Edit " + @Model.Name;
}

<div class="container mt-5">
	<h1>Edit Publisher</h1>
	<form method="post">
		<input asp-for="PublisherId" hidden />
		<div class="border border-light border-5 p-5">
			<div class="mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Logo"></label>
				<input asp-for="Logo" class="form-control" />
				<span asp-validation-for="Logo" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Headquarters"></label>
				<input asp-for="Headquarters" class="form-control" />
				<span asp-validation-for="Headquarters" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Country"></label>
				@{/*<input asp-for="Country" class="form-control" />*/}
				<select class="form-select" asp-for="Country" asp-items="@new SelectList(Countries.countryList)">
					<option disabled selected>Select Country</option>
				</select>
				<span asp-validation-for="Country" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Summary"></label>
				<textarea asp-for="Summary" class="form-control" style="height:300px"></textarea>
				<span asp-validation-for="Summary" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-success">Submit</button>
		</div>
	</form>
</div>

@section Scripts {
    @{
	<partial name="_ValidationScriptsPartial" />
}
}
